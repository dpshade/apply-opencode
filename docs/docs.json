{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Apply OpenCode",
  "colors": {
    "primary": "#7C3AED",
    "light": "#A78BFA",
    "dark": "#5B21B6"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "installation", "usage"]
          },
          {
            "group": "Features",
            "pages": [
              "features/frontmatter",
              "features/titles",
              "features/content",
              "features/wiki-links"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/dpshade/apply-opencode",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Get OpenCode",
      "href": "https://opencode.ai"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/dpshade/apply-opencode"
    }
  }
}
